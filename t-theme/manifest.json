{
    "manifest_version": 3,
    "name": "Tilda Store Helper",
    "version": "1.0.0",
    "description": "Улучшение интерфейса магазина Tilda",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://store.tilda.ru/*",
        "https://*.tilda.ws/*",
        "https://tilda.ru/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://store.tilda.ru/*",
                "https://*.tilda.ws/store*"
            ],
            "js": [
                "content.js",
                "dist/scripts/popup.js"
            ],
            "css": [
                "dist/css/main.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://tilda.ru/page/*"
            ],
            "all_frames": true,
            "js": [
                "content.js",
                "dist/scripts/popup.js"
            ],
            "css": [
                "dist/css/main.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "dist/fonts/*",
                "libs/*.js",
                "*.css"
            ],
            "matches": [
                "https://store.tilda.ru/*",
                "https://*.tilda.ws/*",
                "https://tilda.ru/*"
            ]
        }
    ],
    "action": {
        "default_title": "Tilda Store Helper"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}